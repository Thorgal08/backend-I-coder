<div class="container py-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="fw-bold text-primary">Productos en tiempo real</h1>
    <a href="/" class="btn btn-outline-secondary">
      <i class="bi bi-arrow-left"></i> Lista Estática
    </a>
  </div>

  <form id="product-form" class="row row-cols-1 row-cols-md-3 g-4 mb-5 bg-white p-4 rounded shadow-sm">
    <div class="col">
      <label class="form-label">Título</label>
      <input type="text" name="title" placeholder="Título" required class="form-control" />
    </div>
    <div class="col">
      <label class="form-label">Descripción</label>
      <input type="text" name="description" placeholder="Descripción" required class="form-control" />
    </div>
    <div class="col">
      <label class="form-label">Precio</label>
      <input type="number" name="price" placeholder="Precio" required class="form-control" />
    </div>
    <div class="col">
      <label class="form-label">Código</label>
      <input type="text" name="code" placeholder="Código" required class="form-control" />
    </div>
    <div class="col">
      <label class="form-label">Stock</label>
      <input type="number" name="stock" placeholder="Stock" required class="form-control" />
    </div>
    <div class="col">
      <label class="form-label">Categoría</label>
      <input type="text" name="category" placeholder="Categoría" required class="form-control" />
    </div>
    <div class="col d-flex align-items-end">
      <button type="submit" class="btn btn-success w-100">Agregar</button>
    </div>
  </form>

  <div class="row g-4" id="product-list">
    {{#each products}}
    <div class="col-md-4">
      <div class="card shadow-sm h-100 border-0 product-card">
        <div class="card-body d-flex flex-column">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <h5 class="card-title mb-0">{{this.title}}</h5>
            <span class="badge bg-primary fs-6">${{this.price}}</span>
          </div>
          <p class="card-text text-muted mb-2">{{this.description}}</p>
          <ul class="list-unstyled mb-3">
            <li><span class="badge bg-info text-dark">Stock: {{this.stock}}</span></li>
            <li><span class="badge bg-secondary">Categoría: {{this.category}}</span></li>
            <li><span class="badge bg-warning text-dark">Código: {{this.code}}</span></li>
          </ul>
          <div class="mt-auto d-flex justify-content-between align-items-center">
            {{#if this.status}}
              <span class="badge bg-success">Activo</span>
            {{else}}
              <span class="badge bg-danger">Inactivo</span>
            {{/if}}
            <button onclick="deleteProduct({{this.id}})" class="btn btn-danger btn-sm">
              <i class="bi bi-trash"></i> Eliminar
            </button>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>

<!-- Bootstrap Icons (opcional para el ícono de eliminar) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<script src="/socket.io/socket.io.js"></script>
<script src="/js/socket-client.js"></script>