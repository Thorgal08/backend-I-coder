<div class="container py-5">
  <div class="text-center mb-5">
    <h1 class="fw-bold text-primary">Lista de Productos</h1>
    <p class="text-muted">Vista estática de nuestro catálogo</p>
    <a href="/products" class="btn btn-primary btn-lg">
      <i class="bi bi-grid"></i> Ver Catálogo Completo con Carrito
    </a>
  </div>

  <div class="row g-4">
    {{#each products}}
    <div class="col-md-4">
      <div class="card shadow-sm h-100 border-0 product-card">
        <div class="card-body d-flex flex-column">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <h5 class="card-title mb-0">{{this.title}}</h5>
            <span class="badge bg-primary fs-6">${{this.price}}</span>
          </div>
          <p class="card-text text-muted mb-2">{{this.description}}</p>
          <ul class="list-unstyled mb-3">
            <li><span class="badge bg-info text-dark">Stock: {{this.stock}}</span></li>
            <li><span class="badge bg-secondary">Categoría: {{this.category}}</span></li>
            <li><span class="badge bg-warning text-dark">Código: {{this.code}}</span></li>
          </ul>
          <div class="mt-auto">
            {{#if this.status}}
              <span class="badge bg-success">Activo</span>
            {{else}}
              <span class="badge bg-danger">Inactivo</span>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>

  <div class="text-center mt-5">
    <a href="/realtimeproducts" class="btn btn-primary btn-lg">
      <i class="bi bi-lightning-fill"></i> Ver en Tiempo Real
    </a>
    <p class="text-muted mt-2 small">Gestiona productos con actualizaciones automáticas</p>
  </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
