<div class="container py-5">
  <h1 class="text-center mb-5 fw-bold text-primary">Lista de Productos</h1>

  <div class="row g-4">
    {{#each products}}
    <div class="col-md-4">
      <div class="card shadow-sm h-100 border-0 product-card">
        <div class="card-body d-flex flex-column">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <h5 class="card-title mb-0">{{this.title}}</h5>
            <span class="badge bg-primary fs-6">${{this.price}}</span>
          </div>
          <p class="card-text text-muted mb-2">{{this.description}}</p>
          <ul class="list-unstyled mb-3">
            <li><span class="badge bg-info text-dark">Stock: {{this.stock}}</span></li>
            <li><span class="badge bg-secondary">Categoría: {{this.category}}</span></li>
            <li><span class="badge bg-warning text-dark">Código: {{this.code}}</span></li>
          </ul>
          <div class="mt-auto">
            {{#if this.status}}
              <span class="badge bg-success">Activo</span>
            {{else}}
              <span class="badge bg-danger">Inactivo</span>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>
