<div class="container-fluid py-4">
  <!-- Header del cat√°logo -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h1 class="h3 mb-1">ÔøΩÔ∏è Cat√°logo de Productos</h1>
          <p class="text-muted mb-0">{{products.length}} productos disponibles</p>
        </div>
        <div class="btn-group" role="group">
          <a href="/products" class="btn btn-primary">
            <i class="bi bi-cart-plus"></i> Ir de Compras
          </a>
          <a href="/realtimeproducts" class="btn btn-outline-primary">
            <i class="bi bi-tools"></i> Administrar
          </a>
          <a href="/cart" class="btn btn-success">
            <i class="bi bi-bag"></i> Mi Carrito
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Lista de productos estilo e-commerce -->
  <div class="row">
    <div class="col-12">
      <div class="card shadow-sm border-0">
        <div class="list-group list-group-flush">
          {{#each products}}
          <div class="list-group-item border-0 py-3">
            <div class="row align-items-center">
              <!-- Imagen del producto -->
              <div class="col-md-2 col-3">
                <div class="product-image-container">
                  {{#if this.thumbnails}}
                    <img src="{{this.thumbnails}}" 
                         class="img-fluid rounded border" 
                         style="width: 80px; height: 80px; object-fit: cover;"
                         alt="{{this.title}}">
                  {{else}}
                    <div class="bg-light border rounded d-flex align-items-center justify-content-center" 
                         style="width: 80px; height: 80px;">
                      <i class="bi bi-image text-muted fs-4"></i>
                    </div>
                  {{/if}}
                </div>
              </div>
              
              <!-- Informaci√≥n del producto -->
              <div class="col-md-5 col-9">
                <div class="product-info">
                  <h5 class="product-title mb-1 fw-bold">{{this.title}}</h5>
                  <p class="product-description text-muted mb-2 small">{{this.description}}</p>
                  <div class="product-meta">
                    <span class="badge bg-light text-dark border me-1">
                      <i class="bi bi-upc-scan"></i> {{this.code}}
                    </span>
                    <span class="badge bg-info text-white me-1">
                      <i class="bi bi-tag"></i> {{this.category}}
                    </span>
                  </div>
                </div>
              </div>
              
              <!-- Precio y stock -->
              <div class="col-md-2 col-6 text-center">
                <div class="product-price">
                  <div class="price-current fs-4 fw-bold text-success">
                    ${{this.price}}
                  </div>
                  <div class="stock-info mt-1">
                    {{#if (gt this.stock 20)}}
                      <span class="badge bg-success">
                        <i class="bi bi-check-circle"></i> En Stock ({{this.stock}})
                      </span>
                    {{else if (gt this.stock 5)}}
                      <span class="badge bg-warning text-dark">
                        <i class="bi bi-exclamation-triangle"></i> Pocas unidades ({{this.stock}})
                      </span>
                    {{else if (gt this.stock 0)}}
                      <span class="badge bg-danger">
                        <i class="bi bi-exclamation-circle"></i> √öltimas unidades ({{this.stock}})
                      </span>
                    {{else}}
                      <span class="badge bg-secondary">
                        <i class="bi bi-x-circle"></i> Sin stock
                      </span>
                    {{/if}}
                  </div>
                </div>
              </div>
              
              <!-- Estado y acciones -->
              <div class="col-md-3 col-6">
                <div class="d-flex flex-column align-items-end">
                  <div class="product-status mb-2">
                    {{#if this.status}}
                      <span class="badge bg-success">
                        <i class="bi bi-check-circle"></i> Disponible
                      </span>
                    {{else}}
                      <span class="badge bg-danger">
                        <i class="bi bi-pause-circle"></i> No disponible
                      </span>
                    {{/if}}
                  </div>
                  <div class="product-actions">
                    {{#if this.status}}
                      <button class="btn btn-primary btn-sm me-1" onclick="addToCart('{{this._id}}', this)">
                        <i class="bi bi-cart-plus"></i> Agregar
                      </button>
                    {{/if}}
                    <button class="btn btn-outline-secondary btn-sm" onclick="viewProduct('{{this._id}}')">
                      <i class="bi bi-eye"></i> Ver
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>

  <!-- Footer con estad√≠sticas -->
  <div class="row mt-4">
    <div class="col-12">
      <div class="card bg-light border-0">
        <div class="card-body">
          <div class="row text-center">
            <div class="col-md-3 col-6">
              <div class="stat-item">
                <i class="bi bi-box-seam text-primary fs-1"></i>
                <h5 class="mt-2 mb-0">{{products.length}}</h5>
                <small class="text-muted">Total Productos</small>
              </div>
            </div>
            <div class="col-md-3 col-6">
              <div class="stat-item">
                <i class="bi bi-tags text-success fs-1"></i>
                <h5 class="mt-2 mb-0">üìÇ</h5>
                <small class="text-muted">Categor√≠as</small>
              </div>
            </div>
            <div class="col-md-3 col-6">
              <div class="stat-item">
                <i class="bi bi-check-circle text-info fs-1"></i>
                <h5 class="mt-2 mb-0">‚úì</h5>
                <small class="text-muted">Activos</small>
              </div>
            </div>
            <div class="col-md-3 col-6">
              <div class="stat-item">
                <i class="bi bi-database text-warning fs-1"></i>
                <h5 class="mt-2 mb-0">MongoDB</h5>
                <small class="text-muted">Base de Datos</small>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Scripts para interactividad -->
<script>
function addToCart(productId, buttonElement) {
  // Funci√≥n para agregar al carrito
  
  // Efecto visual
  if (buttonElement) {
    const originalText = buttonElement.innerHTML;
    buttonElement.innerHTML = '<i class="bi bi-check"></i> ¬°Agregado!';
    buttonElement.classList.add('btn-success');
    setTimeout(() => {
      buttonElement.innerHTML = originalText;
      buttonElement.classList.remove('btn-success');
    }, 2000);
  }
  
  alert('¬°Producto agregado al carrito! Ve a /products para la funcionalidad completa.');
}

function viewProduct(productId) {
  // Funci√≥n para ver producto
  window.location.href = `/products/${productId}`;
}
</script>

